[colors]
background = ${xrdb:color0:#282828}
background-alt = ${xrdb:color1:#1d2021}
foreground = ${xrdb:color7:#ebdbb2}
foreground-alt = ${xrdb:color8:#a89984}
primary = ${xrdb:color1:#fe8019}
secondary = ${xrdb:color2:#b16286}
alert = ${xrdb:color3:#fb4934}

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false

background = 1d2021
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.primary}

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 2

font-0 = DejaVu Sans:pixelsize=10;3
font-1 = siji:pixelsize=10;3
font-2 = Font Awesome 5 Free:pixelsize=11;2
font-3 = Font Awesome 5 Free Solid:pixelsize=11;2
font-4 = Font Awesome 5 Brands:pixelsize=11;2
font-5 = Weather Icons:size=12;1

modules-left = i3 filesystem system-usb-mount trash
modules-center = 
modules-right = openweathermap-fullfeatured cpu temperature memory wlan pulseaudio xkeyboard date menu

cursor-click = pointer
cursor-scroll = ns-resize

[module/xkeyboard]
type = internal/xkeyboard
format-prefix = " "

[module/filesystem]
type = internal/fs
interval = 60

mount-0 = /
mount-1 = /home

label-mounted =  %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10


label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = #282828
label-focused-underline= #fabd2f
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
;label-visible = %icon%
;label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
;label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %mb_used%

[module/wlan]
type = internal/network
interface = wls1
interval = 1
click-right = nm-connection-editor
format-connected =  <label-connected>

label-connected =  %downspeed%  %upspeed%

label-disconnected =   %downspeed%  %upspeed%
format-disconnected-foreground = #fb4934

[module/date]
type = internal/date
interval = 1

date = %a %d.%m.%Y

time = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}

label =  %date%   %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume> 
label-volume =  %percentage%%
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
click-right = pavucontrol
label-muted =  %percentage%%
label-muted-foreground = #fb4934

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

